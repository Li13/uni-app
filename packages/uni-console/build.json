[
  {
    "input": {
      "src/compiler/index.ts": "lib/uni.plugin.js"
    },
    "output": {
      "format": "cjs"
    },
    "external": ["@dcloudio/uni-cli-shared"],
    "compilerOptions": {
      "target": "es2018"
    }
  },
  {
    "input": {
      "src/runtime/index.ts": "dist/index.esm.js"
    },
    "replacements": {
      "__DEV__": "process.env.UNI_DEBUG",
      "__UNI_CONSOLE_WEBVIEW__": false
    },
    "compilerOptions": {
      "target": "esnext",
      "declaration": false
    }
  },
  {
    "input": {
      "src/runtime/webview.ts": "dist/webview.js"
    },
    "output": {
      "format": "iife"
    },
    "replacements": {
      "__UNI_CONSOLE_KEEP_ORIGINAL__": true,
      "__UNI_CONSOLE_WEBVIEW__": true
    },
    "compilerOptions": {
      "target": "es5",
      "declaration": false
    }
  }
]
